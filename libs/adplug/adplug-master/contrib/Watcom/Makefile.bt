SUBDIRS = src adplugdb test

AUX = README AUTHORS NEWS COPYING TODO BUGS ChangeLog INSTALL README.dos
DIST = src\*.c src\*.cpp src\*.h src\Makefile.bt adplugdb\*.cpp adplugdb\*.c &
