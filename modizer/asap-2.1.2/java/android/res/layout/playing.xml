<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<TextView android:id="@+id/name" android:textSize="28sp" android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
	<TextView android:id="@+id/author" android:textSize="24sp" android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
	<TextView android:id="@+id/date" android:textSize="24sp" android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
	<Button android:id="@+id/stop_button" android:text="@string/stop_button"
		android:textSize="36sp" android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
</LinearLayout>
